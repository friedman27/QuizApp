<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.android.quizapp.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/quiz_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Quiz on Music"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            />

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. What was Wolfgang Mozart's Middle Name?"
            android:layout_marginBottom="16dp"
            />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type Answer Here"
            android:layout_marginBottom="24dp"
            android:inputType="textNoSuggestions"
            />

        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Which of the following composers was deaf?"
            android:layout_marginBottom="16dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bach"
                android:layout_marginBottom="8dp"
                />

            <RadioButton
                android:id="@+id/answer2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beethoven"
                android:layout_marginBottom="8dp"
                />

            <RadioButton
                android:id="@+id/answer2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hans Zimmer"
                android:layout_marginBottom="8dp"
                />

            <RadioButton
                android:id="@+id/answer2_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="All of the Above"
                android:layout_marginBottom="24dp"
                />

        </RadioGroup>

        <TextView
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Which of the following are commonly used music keys?"
            android:layout_marginBottom="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/answer3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer3_1"
                />

            <CheckBox
                android:id="@+id/answer3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer3_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minor"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer3_2"
                android:layout_below="@id/answer3_1"
                />

            <CheckBox
                android:id="@+id/answer3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer3_2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D Snyder"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer3_3"
                android:layout_below="@id/answer3_2"
                />

            <CheckBox
                android:id="@+id/answer3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer3_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the Above"
                android:layout_marginBottom="24dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer3_4"
                android:layout_below="@id/answer3_3"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Which one of the following was a Jazz musician?"
            android:layout_marginBottom="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/answer4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dizzie Gillespie"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer4_1"
                />

            <CheckBox
                android:id="@+id/answer4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer4_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duke Ellington"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer4_2"
                android:layout_below="@id/answer4_1"
                />

            <CheckBox
                android:id="@+id/answer4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer4_2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count Basie"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer4_3"
                android:layout_below="@id/answer4_2"
                />

            <CheckBox
                android:id="@+id/answer4_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer4_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None of the Above"
                android:layout_marginBottom="24dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer4_4"
                android:layout_below="@id/answer4_3"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Which of the following are brass instruments?"
            android:layout_marginBottom="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/answer5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trumpet"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer5_1"
                />

            <CheckBox
                android:id="@+id/answer5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer5_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Horn"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer5_2"
                android:layout_below="@id/answer5_1"
                />

            <CheckBox
                android:id="@+id/answer5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer5_2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French Horn"
                android:layout_marginBottom="8dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer5_3"
                android:layout_below="@id/answer5_2"
                />

            <CheckBox
                android:id="@+id/answer5_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/answer5_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saxophone"
                android:layout_marginBottom="24dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@+id/answer5_4"
                android:layout_below="@id/answer5_3"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Submit Answers"
            android:textAllCaps="true"
            android:onClick="displayScore"
            />

    </LinearLayout>

</ScrollView>